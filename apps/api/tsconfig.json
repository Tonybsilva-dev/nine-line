{
  "extends": "@nine-line/tsconfig/node",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/test/*": ["./test/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node"]
  },
  "include": ["src", "test", "src/@types/**/*.d.ts", "vitest.config.ts"]
}
